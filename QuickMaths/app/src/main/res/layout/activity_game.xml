<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/gameLayout"
    android:divider="?android:dividerHorizontal"
    android:showDividers="middle">

    <View
        android:id="@+id/splitLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_centerVertical="true"/>

    <!--PLAYER 2-->
    <TextView
        android:id="@+id/player2Clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00.00"
        android:textSize="20dp"
        android:rotation="180"
        android:layout_above="@+id/splitLine"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/p2equation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EQUATION"
        android:textSize="55dp"
        android:layout_above="@+id/player2Clock"
        android:layout_alignStart="@+id/p1equation"
        android:layout_marginBottom="13dp"
        android:rotation="180"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:id="@+id/answerArea2"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/p2equation">

        <TextView
            android:id="@+id/answer4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Answer 4"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_gravity="center_vertical"
            android:rotation="180"/>

        <TextView
            android:id="@+id/answer5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Answer 5"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:rotation="180"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/answer6"
            android:textSize="25dp"
            android:text="Answer 6"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:rotation="180"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:id="@+id/player2Name"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:rotation="180"/>

    <TextView
        android:id="@+id/p2Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:rotation="180"/>



<!--PLAYER 1-->

    <TextView
        android:id="@+id/player1Clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00.00"
        android:textSize="20dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/splitLine"
        android:layout_alignStart="@+id/player2Clock" />
    <TextView
        android:id="@+id/p1equation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EQUATION"
        android:textSize="55dp"
        android:layout_below="@+id/player1Clock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:id="@+id/answerArea"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/p1equation">

        <TextView
            android:id="@+id/answer1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Answer 1"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/answer2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Answer 2"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/answer3"
            android:textSize="25dp"
            android:text="Answer 3"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:id="@+id/player1Name"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/p1Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>